<Window x:Class="DriftOS.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DriftOS Settings" Height="260" Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Icon="Assets/app.ico"
        Background="#0F1115" Foreground="#EDEFF2">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sensitivity -->
        <StackPanel Grid.Row="0" Margin="0,0,0,18">
            <TextBlock Text="Pointer &amp; Scroll Sensitivity" FontSize="16" Margin="0,0,0,6"/>
            <DockPanel>
                <Slider Minimum="0.2" Maximum="2.0" TickFrequency="0.1" IsSnapToTickEnabled="False"
                Value="{Binding Sensitivity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="360"/>
                <TextBlock Text="{Binding Sensitivity, StringFormat=F2}" Width="60" HorizontalAlignment="Right" Margin="8,0,0,0"/>
            </DockPanel>
            <TextBlock Text="Scales cursor speed and scroll rate. 1.00 = default." FontSize="12" Opacity="0.7" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Deadzone -->
        <StackPanel Grid.Row="1" Margin="0,0,0,18">
            <TextBlock Text="Stick Deadzone" FontSize="16" Margin="0,0,0,6"/>
            <DockPanel>
                <Slider Minimum="0.00" Maximum="0.30" TickFrequency="0.01" IsSnapToTickEnabled="False"
                Value="{Binding Deadzone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Width="360"/>
                <TextBlock Text="{Binding Deadzone, StringFormat=F3}" Width="60" HorizontalAlignment="Right" Margin="8,0,0,0"/>
            </DockPanel>
            <TextBlock Text="Ignore tiny stick movement near center. Higher = more stable, less responsive." FontSize="12" Opacity="0.7" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Restore Defaults" Margin="0,0,8,0" Padding="10,6"
              Click="OnRestoreDefaults"/>
            <Button Content="Save" Margin="0,0,8,0" Padding="14,6"
              Click="OnSave"/>
            <Button Content="Close" Padding="14,6"
              Click="OnClose"/>
        </StackPanel>
    </Grid>
</Window>
